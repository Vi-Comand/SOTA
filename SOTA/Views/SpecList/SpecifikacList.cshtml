@model SOTA.Models.SpecifikacsList
@{
    ViewData["Title"] = "Спецификации";
}
<div class="col-12 shadow p-3 mb-5 bg-white rounded">
<div class="col-8">
    <a id="AddSpec" class="btn btn-outline-success col-4" asp-area="" asp-controller="UprSpec" asp-action="SpecifikacAdd">Создать</a>
    <a id="AddSpec" class="btn btn-outline-success col-4">Удалить</a>
</div>
<div class="col-12">
    <table class="table table-hover table-sm table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>Название</th>
                <th>ТИП</th>
                <th>Предмет</th>
                <th>Кол. заданий</th>
                <th>Дата создания</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.Spec)

            {

                <tr>
                    <td><input type="checkbox" /></td>
                    <td> <a href="/UprSpec/SpecifikacRedact?id_spec=@row.Id" class='btn btn-icon btn-sm btn-warning text-center'><i class='fas fa-plus'></i>@row.Name</a></td>
                    <td>@Model.TipSpecs.Where(x => x.Id == row.Tip).First().Name</td>
                    <td>@Model.Predms.Where(x => x.Id == row.Tip).First().Name</td>
                    <td>
                        @if (Model.KolZadVSpec.Count != 0)
                        {
                            @Model.KolZadVSpec.Where(x => x.Id == row.Id).First().kolZad
                        }
                    </td>
                    <td>10.03.2020</td>
                    <td>?</td>
                </tr>
            }
        </tbody>
    </table>
    <div class=" text-right">
        <nav class="d-inline-block">
            <ul class="pagination mb-0">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                </li>
                <li class="page-item active"><a class="page-link" href="#"><ya-tr-span data-index="156-0" data-value="1 " data-translation="1 " data-type="trSpan">1 </ya-tr-span><span class="sr-only"><ya-tr-span data-index="156-0" data-value="(current)" data-translation="(ток)" data-type="trSpan">(ток)</ya-tr-span></span></a></li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</div>
    </div>