@using System.Linq
@model SOTA.Models.UsersPage
@{
    ViewData["Title"] = "ЛК класса";
}

<h1>Пользователи</h1>

<div class="col-12 col-md-12 col-lg-12 shadow p-3 mb-5 bg-white rounded">
    <div class="card-body">
        <ul class="nav nav-tabs" id="myTab3" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="oo-tab" data-toggle="tab" href="#oo" role="tab" aria-controls="oo" aria-selected="true">Список учащихся</a>
            </li>
            @*<li class="nav-item">
                    <a class="nav-link" id="otchet-tab" data-toggle="tab" href="#otchet" role="tab" aria-controls="otchet" aria-selected="false">Отчеты</a>
                </li>*@
        </ul>
        <div class="tab-content tab-bordered " id="myTabContent2">

            <div class="tab-pane fade show active" id="oo" role="tabpanel" aria-labelledby="oo-tab">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover  table-sm table-bordered shadow">
                            <thead class="table-yel">
                                <tr>
                                    <th>#</th>
                                    <th>Логин</th>
                                    <th>Дата регистрации</th>
                                    <th>Управление</th>
                                    <th>
                                        Завершившие работу: @if (ViewBag.last != null)
                                        {@ViewBag.last;
                                    }
                                    </th>
                                    <th>Удалить пользователя</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.LisrUsersTest.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.LisrUsersTest[i].Id </td>
                                        <td>@Model.LisrUsersTest[i].Name</td>
                                        <td>@Model.LisrUsersTest[i].DateReg</td>
                                        <td>
                                            @if (@Model.LisrUsersTest[i].Pass != null)
                                            {
                                                <a asp-area="" asp-controller="Admin" asp-action="CleanPass" asp-route-idDel="@Model.LisrUsersTest[i].Id" asp-route-role="@ViewBag.rl" class="btn btn-danger">Сбросить пароль</a>
                                            }
                                            @if (@Model.LisrUsersTest[i].Kod == "1")
                                            {
                                                <a asp-area="" asp-controller="Admin" asp-action="RazrReg" asp-route-idReg="@Model.LisrUsersTest[i].Id" asp-route-role="@ViewBag.rl" class="btn btn-success">Разрешить регистрацию</a>
                                            }
                                        </td>
                                        <td>@Model.LisrUsersTest[i].Zaverh</td>
                                        <td>
                                            <a href="#"class="btn btn-dark" id="@Model.LisrUsersTest[i].Id" onclick="var q = confirm('Вы уверены что хотите удалить? Это действие отменить нельзя!'); if (q == true) { var ID = $(this).attr('id') ;document.location.href = '/Admin/DelUser?idDel=' + ID; }" >Удалить пользователя</a>
                                        </td>
                                    </tr>
                                }@*document.location.href = Admin/DelUser?idDel=@Model.LisrUsersTest[i].Id;*@
                            </tbody>
                            <tfoot class=" ">
                                <tr>
                                    <td>Всего </td>
                                    <td>@Model.LisrUsersTest.Count</td>
                                    @*<td>@ViewBag.SumTest</td>*@
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addUser">
                        Добавить ученика
                    </button>
</div>
            </div>
            <div class="tab-pane fade" id="otchet" role="tabpanel" aria-labelledby="search-tab">
                otchet
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Добавить ученика</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group wrap-input100 col-12 m-sm-1 ">
                    <div class="input-group-prepend ">
                        <div class="input-group-text">
                            <i class="fas fa-address-book"></i>
                        </div>
                    </div>
                    <input type="text" class="form-control input100 input-group-text" name="F" id="F" placeholder="Фамилия" required />
                    <input type="text" class="form-control input100 input-group-text" name="I" id="I" placeholder="Имя" maxlength="1" required/>
                    <input type="text" class="form-control input100 input-group-text" name="O" id="O" placeholder="Отчество" maxlength="1" />
                    <div class="input-group-text" onclick="alert('Фамилия заполняется полностью. Имя и отчество заполняется одной первой буквой');">
                        <i class="fas fa-question"></i>
                    </div>
                    <span class="focus-input100"></span>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" onclick="AddUser()">Добавить</button>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script>
    function AddUser() {
        f = document.getElementById("F").value;
        i = document.getElementById("I").value;
        o = document.getElementById("O").value;
        if (f == "") {
            alert("Заполните ФИО!");
        }
        else {
            jQuery.ajax({
                url: '/Admin/AddUserAjax/',
                type: "POST",
                dataType: "json",
                data: { f: f, i: i, o: o },
                success: function (data) {
                    console.log(data);
                    window.location.reload();
                }
            });
        }
    }
</script>