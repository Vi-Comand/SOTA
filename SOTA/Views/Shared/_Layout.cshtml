<body class="bg-custom-2">
    <header>
        <div id="topheader">
            <nav class="navbar navbar-light  navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container ">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/favicon.png" width="30" height="30" alt="logo">
                        СОТА
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse navbar-expand-lg collapse ">
                        <ul class="nav navbar-nav flex-grow-1 nav-pills">

                            @if (ViewBag.rl == 1)
                            {
                                <li class="nav-item ">

                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Rabota" asp-action="RabotaList">Работы</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="SpecList" asp-action="SpecifikacList">Спецификации</a>
                                </li>
                                @*<li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Задания</a>
                                    </li>*@
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Test" asp-action="Test">Отчеты</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Users">Пользователи</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item active">

                                    <a class="nav-link text-dark" asp-area="" asp-controller="Uchen" asp-action="NaznacRabotaList">Главная</a>
                                </li>
                            }
                        </ul>
                        <ul class="nav navbar-nav flex-grow-1 nav-pills  navbar-right">
                            @if (User.Identity.IsAuthenticated == false)
                            {
                                <li class="nav-item " style="margin:5px; margin-left:auto;">
                                    <a asp-controller="Account" class="nav-link text-dark" asp-action="Login">Войти </a>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item" style="margin:5px; margin-left:auto;">
                                    <a asp-controller="Account" class="nav-link text-dark" asp-action="Logout">Выйти </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>



    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - СОТА, ГБОУ ИРО КК
        </div>
        <script>
            $(function () {

                var url = window.location.href.substr(window.location.href.indexOf('1/') + 1);
                //alert(url);
                $('.navbar-nav a').each(function () {
                    if ($(this).attr('href') === url || $(this).attr('href') === '') {
                        $(this).parent('li').addClass('active');
                        //alert(2);
                    }
                });
            });

                                                                                            //$('#topheader .navbar-nav a').on('click', function () {
                                                                                            //    alert(1);
                                                                                            //    $('#topheader .navbar-nav').find('li.active').removeClass('active');
                                                                                            //    alert(2);
